@{ 
    var user = Global.User;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Faroosom.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Faroosom.MVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (user is not null)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Action" asp-action="ShowAllUsers">Show All Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Action" asp-action="ShowMySubcriptions">Show My Subcriptions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Action" asp-action="ShowMySubcribers">Show My Subcribers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Action" asp-action="SubscribeToUser">Subscribe To User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Action" asp-action="UnsubcribeFromUser">Unsubcribe From User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Action" asp-action="ShowChats">Show Chats</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Faroosom.MVC
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
